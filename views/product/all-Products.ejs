<%- include('../include/head.ejs') %>
  </head>

  <body>
    <%- include('../include/navigation.ejs') %>
      <link rel="stylesheet" href="/css/product-card.css">

      <main>

        <section class="products">
          <!-- <h2>Product List</h2> -->

          <%if(categoryTitle){%>
            <h2>
              All types of <%= categoryTitle %> 
            </h2>
            <%} else{%>
              <h2>
                All Products
              </h2>
              <%}%>







              <div class="product-grid container">
                <% if (products.length> 0) { %>


                <% products.forEach(product=> { %>
                  <a href="/products/<%= product._id %>" class="a_card">


                    <div class="pcard">
                      <div class="pcard-img"> <img src="/<%= product.imageUrl  %>" alt=""></div>
                      <div class="pcard-title">  <%= product.name %></div>
                      <div class="pcard-brand " > #<%= product.category %></div>
                      <div class="pcard-subtitle"> <%= product.description %> </div>
                      <hr class="pcard-divider p-0 m-0 ">
                      <div class="pcard-footer">
                          <div class="pcard-price"><span>à¤° </span><%= product.price %>  </div>
                          <form  action="/cart/add-to-cart/<%= product._id %>" method="post">
                            
                            <button class="pcard-btn">
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path d="m397.78 316h-205.13a15 15 0 0 1 -14.65-11.67l-34.54-150.48a15 15 0 0 1 14.62-18.36h274.27a15 15 0 0 1 14.65 18.36l-34.6 150.48a15 15 0 0 1 -14.62 11.67zm-193.19-30h181.25l27.67-120.48h-236.6z"></path><path d="m222 450a57.48 57.48 0 1 1 57.48-57.48 57.54 57.54 0 0 1 -57.48 57.48zm0-84.95a27.48 27.48 0 1 0 27.48 27.47 27.5 27.5 0 0 0 -27.48-27.47z"></path><path d="m368.42 450a57.48 57.48 0 1 1 57.48-57.48 57.54 57.54 0 0 1 -57.48 57.48zm0-84.95a27.48 27.48 0 1 0 27.48 27.47 27.5 27.5 0 0 0 -27.48-27.47z"></path><path d="m158.08 165.49a15 15 0 0 1 -14.23-10.26l-25.71-77.23h-47.44a15 15 0 1 1 0-30h58.3a15 15 0 0 1 14.23 10.26l29.13 87.49a15 15 0 0 1 -14.23 19.74z"></path></svg>
                            </button>
                          </form>
                      </div>
                  </div>

                  </a>
                  <% }) %>

              
                  <% } else { %>
                    <div>
                      <h1 style="text-align: center; padding-bottom: 10px;">No Products Found</h1>
                      <img style="border-radius: 8px;" src="https://picsum.photos/400/200" alt="">
                    </div>

                    <% } %>

              </div>

        </section>



      </main>
      <%- include('../include/footer.ejs') %>