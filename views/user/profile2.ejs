<body>

    <%- include('../include/navigation.ejs', { isAuthenticated }) %>

    <main class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">User Profile</h5>
                    </div>
                    <div class="card-body text-center">
                        <img src="<%= user.profilePic %>" alt="Profile Picture" class="profile-picture2">
                        <h5 class="card-title"><%= user.name %></h5>
                        <p class="card-text"><i class="fas fa-envelope"></i> <%= user.email %></p>
                        <p class="card-text"><i class="fas fa-phone"></i> 9876543210</p> <!-- Replace with user phone if available -->
                        <p class="card-text"><i class="fas fa-user"></i> <%= user.userType %></p>
                        <p class="card-text"><i class="fas fa-check-circle"></i> <%= user.verified ? 'Verified' : 'Not Verified' %></p>
                        <p class="card-text"><i class="fas fa-calendar"></i> Joined on <%=user.createdAt ? user.createdAt.toDateString() : 'N/A'%></p>
                        
                        <button class="btn btn-primary btn-sm" id="editProfileBtn"><i class="fas fa-edit"></i> Edit Profile</button>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Current Rental Status</h5>
                    </div>
                    <div class="card-body">
                         <ul class="list-group">
                            <% user.rentals.forEach(rental => { %>
                            <li class="list-group-item">
                                <h6>Order #<%= rental._id._id %></h6>
                                <p>Status: <%= rental._id.status %> </p> 
                                <p>Start Date: <%= rental._id.rentalStartDate ? rental._id.rentalStartDate.toDateString() : 'N/A' %></p>
                                <p>Return Date: <%= rental._id.returnDate ? rental._id.returnDate.toDateString() : 'N/A' %></p>
                                <p>Total Amount: ₹<%= rental._id.rentalCost %></p>
                                

                        


                                
                            </li>
                            <% }) %>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Order History</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <% user.orders.forEach(order => { %>
                            <li class="list-group-item">
                                <h6>Order #<%= order._id._id %></h6>
                                <p>Status: <%= order._id.status %> </p>
                                <p>Order Date: <%= order._id.orderDate ? order._id.orderDate.toDateString() : 'N/A' %></p>
                               <!-- add rupee sine -->
                                
                                <p>Total Amount: ₹<%= order._id.totalPrice %></p>



                                
                            </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>

