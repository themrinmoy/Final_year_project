<%- include('../include/head.ejs') %>
    </head>

    <body>
        <%- include('../include/navigation.ejs') %>
            <link rel="stylesheet" href="/css/checkout.css">

            <main class="checkout-page">
                <div class="container">
                    <h2>Checkout</h2>
                    <% if (items && items.length> 0) { %>
                        <section class="checkout-summary">
                            <div class="cart-items">
                                <% for (const item of items) { %>
                                    <div class="cart-item">
                                        <div class="item-image">
                                            <img src="/<%= item.productId.imageUrl %>" alt="<%= item.productId.name %>">
                                        </div>
                                        <div class="item-details">
                                            <h3>
                                                <%= item.productId.name %>
                                            </h3>
                                            <p class="quantity">Quantity: <%= item.quantity %>
                                            </p>
                                            <p class="item-total">Total: ₹<%= (item.quantity *
                                                    item.productId.price).toFixed(2) %>
                                            </p>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                            <div class="checkout-details">
                                <h3>Shipping Details</h3>
                                <div class="subtotal">
                                    <p>Subtotal: <span class="price">₹ <%= totalPrice.toFixed(2) %></span></p>
                                </div>
                                <div class="shipping">
                                    <p>Shipping: <span class="price">₹ 0.00</span></p>
                                    <p>Calculated at checkout</p>
                                </div>
                                <div class="total">
                                    <p>Total: <span class="price">₹ <%= totalPrice.toFixed(2) %></span></p>
                                </div>
                                <div class="address-section">
                                    <h3>Shipping Address</h3>
                                    <p>John Doe</p>
                                    <p>123 Main Street</p>
                                    <p>Cityville, State 12345</p>
                                    <p>Country</p>
                                </div>

                                <!-- show about the test payment details -->


                                <div class="checkout-btn">
                                    <h3>Payment</h3>
                                    <form id="payment-form">
                                        <div id="card-element" class="card-element">
                                            <!-- A Stripe Element will be inserted here. -->
                                        </div>
                                        <button id="submit" class="proceed-btn submit-button">Proceed to
                                            Payment</button>
                                        <p id="card-error" role="alert"></p>

                                    </form>

                                    <div class="test-payment">
                                        <h3>Test Payment Details</h3>
                                        <p>Card Number: 4000 0035 6000 0008</p>
                                        <p>MM/YY: 12/25</p>
                                        <p>CVC: 123</p>

                                    </div>
                                    <p class="result-message hidden">
                                        Payment succeeded, see the result in your
                                        <a href="" target="_blank">Stripe dashboard.</a> Refresh the page to pay
                                        again.
                                    </p>
                                    <script src="https://js.stripe.com/v3/"></script>
                                    <script>

                                        var stripe = Stripe('pk_test_51OaQJHSJMzEXtTp5wyVjLtxG1HR5owr2fy786eE8O1h60aTBiDqcHcnNu0vx6m8RoebDmYPOgXe0A9pBq6X7SBUp00mSNKCVkp');
                                        var elements = stripe.elements();

                                        var style = {
                                            base: {
                                                color: "#32325d",
                                                fontFamily: '"Helvetica Neue", Helvetica, sans-serif',
                                                fontSmoothing: "antialiased",
                                                fontSize: "16px",
                                                "::placeholder": {
                                                    color: "#aab7c4"
                                                }
                                            },
                                            invalid: {
                                                color: "#fa755a",
                                                iconColor: "#fa755a"
                                            }
                                        };

                                        var card = elements.create("card", { style: style });
                                        card.mount("#card-element");

                                        card.on('change', ({ error }) => {
                                            const displayError = document.getElementById('card-error');
                                            if (error) {
                                                displayError.textContent = error.message;
                                            } else {
                                                displayError.textContent = '';
                                            }
                                        });

                                        var form = document.getElementById('payment-form');
                                        form.addEventListener('submit', async (event) => {
                                            event.preventDefault();

                                            const { error, paymentIntent } = await stripe.confirmCardPayment('<%= clientSecret %>', {
                                                payment_method: {
                                                    card: card,
                                                    billing_details: {
                                                        name: 'John Doe'
                                                    }
                                                }
                                            });
                                            
                                            if (error) {
                                                // Show error to your customer (e.g., insufficient funds)
                                                console.log(error.message);
                                                const errorElement = document.getElementById('card-error');
                                                errorElement.textContent = error.message;
                                            } else {
                                                // The payment has been processed!
                                                if (paymentIntent.status === 'succeeded') {
                                                   
                                                  //  console.log(sessionId);
                                                    window.location.href = `/shop/checkout/success`;
                                                }
                                            }
                                        });
                                    </script>
                                </div>
                            </div>
                        </section>
                        <% } else { %>
                            <h2 class="headingcheckout">No products in your cart!</h2>
                            <div class="centered">
                                <a href="/rent/" class="btn">Go to Shop</a>
                            </div>
                            <% } %>
                </div>
            </main>
            <%- include('../include/footer.ejs') %>
    </body>