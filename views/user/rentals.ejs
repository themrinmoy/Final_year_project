<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../include/head.ejs') %>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }
        th {
            background-color: #f2f2f2;
        }
        .status {
            font-weight: bold;
        }
        .active {
            color: green;
        }
        .completed {
            color: blue;
        }
        .overdue {
            color: red;
        }
        .pending {
            color: orange;
        }
        .paid {
            color: green;
        }
    </style>
</head>
<body>
    <%- include('../include/navigation.ejs') %>

    <main>
        <h1 style="text-align: center; padding-top: 10px;">My Rentals</h1>

        <div class="container">
            <table>
                <thead>
                    <tr>
                        <th>Rental ID</th>
                        <th>Rental Date</th>
                        <th>Product</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Return Date</th>
                        <th>Status</th>
                        <th>Rental Cost</th>
                        <th>Payment Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>rental123</td>
                        <td>01/01/2023</td>
                        <td>Product A</td>
                        <td>01/05/2023</td>
                        <td>01/10/2023</td>
                        <td>01/10/2023</td>
                        <td class="status completed">Completed</td>
                        <td>$50.00</td>
                        <td class="status paid">Paid</td>
                    </tr>
                    <tr>
                        <td>rental124</td>
                        <td>02/01/2023</td>
                        <td>Product B</td>
                        <td>02/05/2023</td>
                        <td>02/10/2023</td>
                        <td>02/10/2023</td>
                        <td class="status active">Active</td>
                        <td>$60.00</td>
                        <td class="status pending">Pending</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </main>

    <%- include('../include/footer.ejs') %>
</body>
</html>
